{
  "jobName": "cntk-jobguid",
  "image": "pai.run.cntk",

  // prepare cmudict corpus in CNTK format https://git.io/vbT5A and upload to hdfs
  "dataDir": "hdfs://path/cntk-jobguid/data",
  // make a new dir for output on hdfs
  "outputDir": "hdfs://path/cntk-jobguid/output",
  // prepare g2p training script cntk-example.sh and upload to hdfs
  "codeDir": "hdfs://path/cntk-jobguid/code",

  "taskRoles": [
    {
      "name": "g2p-train",
      "taskNumber": 1,
      "cpuNumber": 8,
      "memoryMB": 16384,
      "gpuNumber": 1,
      "command": "/bin/bash code/cntk-example.sh"
    }
  ]
}